<Window x:Class="Flareshot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flareshot"
        Height="300" Width="400"
        MinHeight="200" MinWidth="300"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="Flareshot"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="Lightweight screen capture tool"
                       FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0" />
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Press Print Screen to capture"
                       FontSize="14"
                       Foreground="{StaticResource TextBrush}"
                       HorizontalAlignment="Center" />
            <TextBlock Text="or use the system tray icon"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">
            <Button x:Name="SettingsButton"
                    Content="Settings"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Click="SettingsButton_Click" />
            <Button x:Name="CaptureButton"
                    Content="Capture"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Margin="12,0,0,0"
                    Click="CaptureButton_Click" />
        </StackPanel>
    </Grid>
</Window>
